/* miniprogram/pages/me/index.wxss */

page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.userinfo{
  height: 200rpx;
  width: 750rpx;
  background: rgb(255, 255, 255);
  display: flex;
  flex-direction: row;
}
.userAvatar{
  width: 200rpx;
  height: 200rpx;
}
.userAvatar image{
  width: 150rpx;
  height: 150rpx;
  margin: 25rpx;
  border-radius: 50%;
  background-color: #e6e8e9;
}
.other,.details{
  width: 550rpx;
  height: 200rpx;
  position: relative;
  top: 0;
  left: 0;
}
.other button{
  color: rgb(255, 255, 255);
  margin: 70rpx 180rpx;
}
#news{
  height: 70rpx;
  width: 70rpx;
  position: absolute;
  right: 25rpx;
  bottom: 0;
}
#nickname {
  font-size: 35rpx;
  color: #007aff;
  background-size: cover;
}
.nameLine{
  position: absolute;
  margin-left: 50rpx;
  left:0;
  bottom: 30%;
}
.nameLine image{
  width:50rpx;
  height:50rpx;
  margin: 0 25rpx;
}
.container{
  width: 100%;
  padding: 0;
  margin-top: 30rpx;
}
.container .option{
  margin-top: 0;
  border-bottom: 2rpx solid #e2e2e2;
}
.option{
  width: 750rpx;
  height: 80rpx;
  margin-top: 30rpx;
  display: flex;
  background-color: white;
}
.optionText{
  margin: auto 10rpx;
  width: 580rpx;
}
.go{
  width: 40rpx;
  height: 40rpx;
  margin: 20rpx 0;
}
.icon{
  width: 50rpx;
  height: 50rpx;  
  margin: auto 20rpx;
}
.logIn{
  font-size: 30rpx;
  color: #1E90FF;
}
.logOut{
  font-size: 30rpx;
  color: #ced0d1;
}