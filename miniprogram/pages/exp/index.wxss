/* pages/exp/index.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.fixed{
  position:fixed;
  top: 104px;
  background-color:rgb(247, 247, 247);
  z-index:27;
}
#search{
  width:750rpx;
  height:70rpx;
  position: fixed;
  z-index: 227;
  background-color: #1E90FF;
}
#search button{
  height:100%;
  width: 95%;
  display: flex;
  justify-content: center;
  border: thick solid #1E90FF;
  border-radius: 20rpx;
}
button icon{
  margin: auto auto;
}
#container{
  width: 750rpx;
  height:1500rpx;
  display: flex;
  justify-content: center;
  align-self: center;
}
#ad swiper{
  height: 250rpx;
  width: 700rpx;
  margin: 10rpx 25rpx;
  border-radius: 25rpx;
  overflow: hidden;
}
#ad swiper-item{
  height: 250rpx;
  width: 700rpx;
  margin: 0;
}
#ad image{
  height: 250rpx;
  width: 700rpx;
  border-radius: 25rpx;
}
#classification{
  font-size: 30rpx;
  margin: 10rpx 25rpx;
  display: inline-flex;
  justify-content: space-between;
}
.block{
  height: 175rpx;
  width: 130rpx;
  margin: 5rpx 20rpx;
  margin-left: 5rpx;
  border-radius: 10%;
  text-align: center;
  align-self: center;
  display: inline-block;
}
.block image{
  height: 130rpx;
  width: 130rpx;
  text-align: center;
  border-radius: 10%;
  background-color: rgb(226, 230, 46)
}
#professionalClassification{
  height: 125rpx;
  width: 80rpx;
  position: relative;
  top: 50rpx;
  left: 5rpx;
  text-align: center;
  margin: 10rpx 5rpx;
}
#professionalClassification image{
  background-color: rgb(226, 230, 46);
  height: 80rpx;
  width: 80rpx;
  border-radius: 10rpx;
}
#time{
  display: flex;
  height: 50rpx;
  width: 700rpx;
  font-size: 30rpx;
  margin:0 25rpx;
  justify-content: space-around;
}
#time view{
  margin: auto 0rpx;
}
.section{
  margin: auto 20rpx;
  border-radius: 25rpx;
  text-align: center;
  background-color: #1E90FF;
}
#timeSel{
  display: flex;
  margin-left: 10rpx;
}
#expShow swiper{
  width: 700rpx;
  height: 1000rpx;
}
.line{
  width: 750rpx;
  height: 3rpx;
  margin: auto 0;
  background-color: rgb(207, 209, 211);
}
#nav{
  height: 60rpx;
  margin: 0 100rpx;
}
#nav view{
  width: 200rpx;
  height: 40rpx;
  margin: 5rpx 25rpx;
  font-size: 30rpx;
  text-align: center;
  display: inline-block;
  border-bottom: 5rpx solid #f6f6f6; 
}
#nav .on{
  border-bottom: 5rpx solid #1E90FF; 
}
#expShow .button{
  width: 80rpx;
  height: 50rpx;
  border-radius: 8rpx;
  position: relative;
  bottom: 190rpx;
  text-align: center;
  left: 610rpx;
  font-size: 30rpx;
  background-color: rgb(0, 197, 10);
}
swiper{
  position: relative;
  top: 0;
  left: 0;
  margin: 0rpx 25rpx;
  height: 5000rpx;
}
scroll-view expsag{
  margin: 0;
}
.footer{
  position: absolute;
  bottom: 50rpx;
  display: flex;
  flex-direction: column;
  text-align: center;
  font-size: 20rpx;
  color: #1E90FF;
}




.modalBlock{
  width: 100%;
  margin: 10rpx 0; 
  display: flex;
  flex-direction: row;
  font-size: 25rpx;
  overflow: hidden;
}
.modalBlock image{
  background-color: rgb(240, 255, 27);
  width: 200rpx;
  height: 200rpx;
  margin: 0 5rpx;
}
.detail{
  display: flex;
  flex-direction: column;
}
.detail .title{
  position: relative;
  left: 0;
  top:0;
  height: 50rpx;
  width: 100%;
  margin: 5rpx 0;
  font-size: 35rpx;
}
.detail .details{
  height: 40rpx;
  width: 100%;
  font-size: 30rpx;
  color: #1E90FF;
}
.modalBlock text{
  font-size: 25rpx;
  color: rgb(107, 108, 109);
}
.experimenter{
  display: flex;
  flex-flow:   row nowrap;
}
.textContent{
  width: 600rpx;
  font-size: 25rpx;
}
.modalBlock .content{
  display: flex;
  flex-direction: row;
}
.tags{
  margin: 5rpx 0;
  display: inline-flex;
  flex-flow: row wrap;
}
.tag{
  background-color: #1E90FF;
  border-radius: 8rpx;
  padding: 4rpx;
  font-size: 20rpx;
  margin: 10rpx;
  margin-bottom: 0;
}
.date{
  display: inline-block;
  font-size: 25rpx;
}
#avatar{
  width: 100rpx;
  height:100rpx;
  border-radius: 50rpx;
}
#gender{
  margin-top: 40rpx;
  width: 35rpx;
  height: 35rpx;
  background-color: #F8F8FF;
}
.selTime{
  display: inline-block;
  width: 100%;
}
myModal #button{
  width: 100%;
  height: 90rpx;
  position: absolute;
  z-index: 999;
  left: 0;
  bottom: 0rpx;
  background-color: rgb(255, 255, 255);
}
#button view{
  text-align: center;
  height: 50rpx;
  margin: 20rpx 10%;
  width: 80%;
  border-radius: 20rpx;
  background-color: rgb(4, 182, 43);
}
myModal input{
  font-size: 25rpx;
  width: 85%;
  height: 35rpx;
}
.modalBlock .legend{
  margin: 10rpx;
  margin-top: 0;
  background-color: #1E90FF;
  height: 30rpx;
  width: 30rpx;
}


.name{
  font-size: 30rpx;
  font-weight: bolder;
  margin: 0 10rpx;
  width: 570rpx;
  display: inline-flex;
}
.name image{
  width: 30rpx;
  height: 40rpx;
  margin-left: 10rpx;
  background-color: rgb(226, 230, 46);
}
.name view{
  font-size: 20rpx;
  font-weight: bolder;
  border-radius: 5rpx;
  width: 80rpx;
  margin: 5rpx;
  padding: 5rpx;
  background-color: #1E90FF;
}
.detail1{
  display: inline-flex;
  flex-flow: row wrap;
  margin: 0 10rpx;
  width: 570rpx;
  justify-content: space-between;
}
.reward,.distance{
  color: #04a77e;
  font-size: 25rpx;
}
.score{
  color: #e2ba05;
  font-size: 25rpx;
}


















































