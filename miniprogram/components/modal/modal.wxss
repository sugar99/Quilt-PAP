/* components/myModal/myModal.wxss */

/*遮罩层*/
.mask{
  position: fixed;
  width:750rpx;
  height:100%;
  background:rgba(0,0,0,0.5);
  top:0;
  left:0;
  z-index: 909;
  transition: all 300ms ease-out;
}
/*弹出模态框*/
.modal{
  width:100%;
  position: fixed;
  z-index: 910;
  background:white;
  border-radius: 25rpx;
  transition: all 300ms ease-out;
}
.modal .title{
  font-size:30rpx;
  height:70rpx;
  line-height:50rpx;
  border-bottom:2rpx solid #ddd;
  color:rgb(36, 36, 36);
  padding:10rpx 15rpx;
  display: flex;
  justify-content:space-between;
  align-items: center；
}
.title image{
  height: 60rpx;
  width: 60rpx;
}
.modal .content{
  padding: 5rpx 15rpx;
  overflow: scroll;
  height:700rpx;
}